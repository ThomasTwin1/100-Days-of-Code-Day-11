# Main Quest
# Step 1: Set values for cards
king = 10
jack = 10
queen = 10
ace = 11
cards = [2, 3, 4, 5, 6, 7, 8, 9, king, jack, queen, ace]


# Step 2: select cards
player_cards = [random.choice(cards), random.choice(cards)]
computer_cards = [random.choice(cards)]

# Step 3: calculate totals
player_total = sum(player_cards)
computer_total = sum(computer_cards)

# Step 4: Show results of first hand
print("ğŸ´ Playerâ€™s starting hand:", player_cards, "â†’ total:", player_total)
print("ğŸ´ Computerâ€™s starting hand:", computer_cards, "â†’ total:", computer_total)

# Step 5: Ask player for another card
another_card = input("Type 'y' to get another card, type 'n' to pass:")
if another_card == 'y':
    player_cards.append(random.choice(cards))   # safely add new player card
    player_total = sum(player_cards)  # recalc player total
    computer_cards.append(random.choice(cards)) # safely add new computer card
    computer_total = sum(computer_cards) # recalc computer total
    print("ğŸ´ Playerâ€™s hand:", player_cards, "â†’ total:", player_total) # Player final total
    print("ğŸ´ Computerâ€™s starting hand:", computer_cards, "â†’ total:", computer_total) # Computer final total











